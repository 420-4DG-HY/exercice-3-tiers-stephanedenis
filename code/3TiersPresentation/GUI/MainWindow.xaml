        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="220*"/>
            <ColumnDefinition Width="417*"/>
        </Grid.ColumnDefinitions>
        <Label x:Name="lblFichier" Content="Fichier : " HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top" Width="193"/>
        <TextBox x:Name="txtNomFichier" HorizontalAlignment="Left" Height="26" Margin="208,10,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="230" Grid.ColumnSpan="2"/>
        <Button x:Name="btnLireFichier" Content="Lire Fichier" HorizontalAlignment="Left" Height="50" Margin="237.32,10,0,0" VerticalAlignment="Top" Width="129" Grid.Column="1" Click="btnLireFichier_Click"/>
