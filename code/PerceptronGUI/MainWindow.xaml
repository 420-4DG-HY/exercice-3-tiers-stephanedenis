<Window x:Class="Perceptron.GUI.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PerceptronGUI"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="220*"/>
            <ColumnDefinition Width="417*"/>
        </Grid.ColumnDefinitions>
        <Label x:Name="lblFichier" Content="Fichier : " HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top" Width="193"/>
        <TextBox x:Name="txtNomFichier" HorizontalAlignment="Left" Height="26" Margin="60,10,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="378" Grid.ColumnSpan="2"/>
        <Button x:Name="btnLireFichier" Content="Lire Fichier" HorizontalAlignment="Left" Height="30" Margin="341,6,0,0" VerticalAlignment="Top" Width="70" Grid.Column="1" Click="btnLireFichier_Click"/>
        <TextBlock x:Name="txtConsole" HorizontalAlignment="Left" Height="274" Margin="10,50,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="623" Grid.ColumnSpan="2" Background="Black" Foreground="Green"/>

    </Grid>
</Window>
